@model IEnumerable<BankProjekt.Models.Credit>

@{
    ViewBag.Title = "Credit List";
}

<h2>Credits List</h2>
<table class="table table-striped">
    <thead style="background-color: lightblue">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BankAccount.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoneyToPay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MonthlyRepayment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfMonthsLeft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayName("Options")
            </th>
            <th></th>
        </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BankAccount.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cash)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoneyToPay)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MonthlyRepayment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfMonthsLeft)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>

            </tr>
        }
</table>