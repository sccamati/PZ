@model BankProjekt.Models.DefinedRecipient

@{
    ViewBag.Title = "DefinedRecipient";
}

<h2>DefinedRecipient</h2>

@using (Html.BeginForm("DefinedRecipient", "Transfers", FormMethod.Post))
{
@Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>DefinedRecipient</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ProfileId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ProfileId, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
            @Html.ValidationMessageFor(model => model.ProfileId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ReceiversName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ReceiversName, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
            @Html.ValidationMessageFor(model => model.ReceiversName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ReceiversNumber, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ReceiversNumber, new { htmlAttributes = new { @class = "form-control", type = "hidden" } })
            @Html.ValidationMessageFor(model => model.ReceiversNumber, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Yes" class="btn btn-default" />
        </div>
    </div>
</div>
}

@using (Html.BeginForm("CancelDefinedRecipient", "Transfers", FormMethod.Post))
{
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <input type="submit" value="No" class="btn btn-default" />
    </div>
</div>
}